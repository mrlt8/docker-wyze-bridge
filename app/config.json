{
    "name": "Docker Wyze Bridge",
    "description": "RTMP/RTSP/HLS bridge for Wyze cams in a docker container",
    "slug": "docker-wyze-bridge",
    "url": "http://github.com/mrlt8/docker-wyze-bridge",
    "image": "mrlt8/wyze-bridge",
    "version": "1.4.1",
    "arch": [
        "armv7",
        "aarch64",
        "amd64"
    ],
    "startup": "application",
    "boot": "auto",
    "apparmor": false,
    "ports": {
        "1935/tcp": 1935,
        "8554/tcp": 8554,
        "8888/tcp": 8888
    },
    "ports_description": {
        "1935/tcp": "RTMP streams",
        "8554/tcp": "RTSP streams",
        "8888/tcp": "HLS streams"
    },
    "environment": {
        "HASS": "true",
        "IMG_DIR": "config/www",
        "SKIP_RTSP_LOG": "true",
        "RECORD_PATH": "media/wyze/{CAM_NAME}"
    },
    "map": [
        "config:rw",
        "media:rw"
    ],
    "services": [
        "mqtt:want"
    ],
    "options": {
        "WYZE_EMAIL": null,
        "WYZE_PASSWORD": null,
        "NET_MODE": "ANY",
        "SNAPSHOT": "API",
        "MQTT_DTOPIC": "homeassistant",
        "ENABLE_AUDIO": false
    },
    "schema": {
        "WYZE_EMAIL": "email",
        "WYZE_PASSWORD": "password",
        "NET_MODE": "list(LAN|P2P|ANY)",
        "SNAPSHOT": "list(API|RTSP|RTSP5|RTSP15|RTSP30|RTSP60|Disable)?",
        "IMG_TYPE": "list(jpg|png)?",
        "IMG_DIR": "str?",
        "ENABLE_AUDIO": "bool?",
        "AUDIO_CODEC": "list(COPY|AAC|MP3)?",
        "AUDIO_FILTER": "str?",
        "RECORD_ALL": "bool?",
        "RECORD_LENGTH": "int?",
        "RECORD_PATH": "str?",
        "MQTT_HOST": "str?",
        "MQTT_AUTH": "str?",
        "MQTT_TOPIC": "str?",
        "MQTT_DTOPIC": "str?",
        "FILTER_NAMES": "str?",
        "FILTER_MODELS": "str?",
        "FILTER_MACS": "str?",
        "FILTER_BLOCK": "bool?",
        "ROTATE_DOOR": "bool?",
        "IGNORE_OFFLINE": "bool?",
        "FRESH_DATA": "bool?",
        "URI_SEPARATOR": "list(-|_|#)?",
        "QUALITY": "str?",
        "FFMPEG_FLAGS": "str?",
        "FFMPEG_CMD": "str?",
        "DEBUG_FRAMES": "bool?",
        "DEBUG_FFMPEG": "bool?",
        "RTSP_RTSPDISABLE": "list(yes|no)?",
        "RTSP_RTMPDISABLE": "list(yes|no)?",
        "RTSP_HLSDISABLE": "list(yes|no)?",
        "RTSP_READTIMEOUT": "list(5s|10s|15s|20s|25s|30s)?",
        "IGNORE_RES": "int?",
        "KEEP_BAD_FRAMES": "bool?",
        "FPS_FIX": "bool?",
        "WEBRTC": "bool?"
    }
}
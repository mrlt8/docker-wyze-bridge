{
    "name": "Docker Wyze Bridge",
    "description": "RTMP/RTSP/HLS bridge for Wyze cams in a docker container",
    "slug": "docker-wyze-bridge",
    "url": "http://github.com/mrlt8/docker-wyze-bridge",
    "version": "0.7",
    "arch": [
        "armv7",
        "aarch64",
        "amd64"
    ],
    "startup": "application",
    "boot": "auto",
    "apparmor": true,
    "ports": {
        "1935/tcp": 1935,
        "8554/tcp": 8554,
        "8888/tcp": 8888
    },
    "ports_description": {
        "1935/tcp": "RTMP streams",
        "8554/tcp": "RTSP streams",
        "8888/tcp": "HLS streams"
    },
    "environment": {
        "HASS": "true",
        "MQTT_DTOPIC": "homeassistant"
    },
    "map": [
        "config:rw"
    ],
    "options": {
        "WYZE_EMAIL": null,
        "WYZE_PASSWORD": null,
        "LAN_ONLY": false,
        "API_THUMB": true
    },
    "schema": {
        "WYZE_EMAIL": "email",
        "WYZE_PASSWORD": "password",
        "LAN_ONLY": "bool",
        "API_THUMB": "bool",
        "RTSP_THUMB": "bool?",
        "FRESH_DATA": "bool?",
        "IGNORE_OFFLINE": "bool?",
        "URI_SEPARATOR": "list(-|_|#)?",
        "FILTER_NAMES": "str?",
        "FILTER_MODELS": "str?",
        "FILTER_MACS": "str?",
        "FILTER_BLOCK": "bool?"
    }
}
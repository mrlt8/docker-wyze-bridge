{
    "name": "Docker Wyze Bridge",
    "description": "RTMP/RTSP/HLS bridge for Wyze cams in a docker container",
    "slug": "docker-wyze-bridge",
    "url": "https://github.com/mrlt8/docker-wyze-bridge",
    "image": "mrlt8/wyze-bridge",
    "version": "1.10.0",
    "arch": [
        "armv7",
        "aarch64",
        "amd64"
    ],
    "startup": "application",
    "boot": "auto",
    "apparmor": false,
    "ports": {
        "1935/tcp": 1935,
        "8554/tcp": 8554,
        "8888/tcp": 8888,
        "5000/tcp": 5000
    },
    "ports_description": {
        "1935/tcp": "RTMP streams",
        "8554/tcp": "RTSP streams",
        "8888/tcp": "HLS streams",
        "5000/tcp": "Web-UI/Snapshots"
    },
    "environment": {
        "HASS": "true",
        "IMG_DIR": "config/www",
        "SKIP_RTSP_LOG": "true",
        "RECORD_PATH": "media/wyze/{CAM_NAME}"
    },
    "map": [
        "config:rw",
        "media:rw",
        "ssl:ro"
    ],
    "services": [
        "mqtt:want"
    ],
    "ingress": true,
    "ingress_port": 5000,
    "options": {
        "WYZE_EMAIL": null,
        "WYZE_PASSWORD": null,
        "NET_MODE": "ANY",
        "SNAPSHOT": "API",
        "MQTT_DTOPIC": "homeassistant",
        "ENABLE_AUDIO": false,
        "ON_DEMAND": false,
        "CAM_OPTIONS": []
    },
    "schema": {
        "WYZE_EMAIL": "email",
        "WYZE_PASSWORD": "password",
        "TOTP_KEY": "str?",
        "NET_MODE": "list(LAN|P2P|ANY)",
        "SNAPSHOT": "list(API|RTSP|RTSP5|RTSP15|RTSP30|RTSP60|Disable)?",
        "IMG_TYPE": "list(jpg|png)?",
        "IMG_DIR": "str?",
        "ON_DEMAND": "bool?",
        "ENABLE_AUDIO": "bool?",
        "AUDIO_CODEC": "list(COPY|AAC|MP3)?",
        "AUDIO_FILTER": "str?",
        "LLHLS": "bool?",
        "WEB_AUTH": "bool?",
        "WEB_USERNAME": "str?",
        "WEB_PASSWORD": "str?",
        "DISABLE_CONTROL": "bool?",
        "RTSP_FW": "bool?",
        "RECORD_ALL": "bool?",
        "RECORD_LENGTH": "int?",
        "RECORD_PATH": "str?",
        "MQTT_HOST": "str?",
        "MQTT_AUTH": "str?",
        "MQTT_TOPIC": "str?",
        "MQTT_DTOPIC": "str?",
        "FILTER_NAMES": "str?",
        "FILTER_MODELS": "str?",
        "FILTER_MACS": "str?",
        "FILTER_BLOCK": "bool?",
        "ROTATE_DOOR": "bool?",
        "H264_ENC": "str?",
        "IGNORE_OFFLINE": "bool?",
        "OFFLINE_IFTTT": "match(^\\w+:\\w+)?",
        "FRESH_DATA": "bool?",
        "URI_SEPARATOR": "list(-|_|#)?",
        "QUALITY": "str?",
        "FFMPEG_FLAGS": "str?",
        "FFMPEG_CMD": "str?",
        "DEBUG_FRAMES": "bool?",
        "DEBUG_FFMPEG": "bool?",
        "IGNORE_RES": "int?",
        "KEEP_BAD_FRAMES": "bool?",
        "FPS_FIX": "bool?",
        "WEBRTC": "bool?",
        "ENABLE_BOA": "bool?",
        "BOA_INTERVAL": "int?",
        "TAKE_PHOTO": "bool?",
        "PULL_PHOTO": "bool?",
        "PULL_ALARM": "bool?",
        "MOTION_HTTP": "str?",
        "MOTION_COOLDOWN": "int?",
        "CAM_OPTIONS": [
            {
                "CAM_NAME": "str?",
                "AUDIO": "bool?",
                "FFMPEG": "str?",
                "LIVESTREAM": "str?",
                "NET_MODE": "str?",
                "ROTATE": "bool?",
                "QUALITY": "str?",
                "RECORD": "bool?"
            }
        ],
        "RTSP_SIMPLE_SERVER": [
            "match(^\\w+=.*)?"
        ],
        "WB_HLS_URL": "str?",
        "WB_RTMP_URL": "str?",
        "WB_RTSP_URL": "str?"
    }
}
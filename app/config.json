{
    "name": "Docker Wyze Bridge",
    "description": "RTMP/RTSP/HLS bridge for Wyze cams in a docker container",
    "slug": "docker-wyze-bridge",
    "url": "http://github.com/mrlt8/docker-wyze-bridge",
    "image": "mrlt8/wyze-bridge",
    "version": "1.0.0",
    "arch": [
        "armv7",
        "aarch64",
        "amd64"
    ],
    "startup": "application",
    "boot": "auto",
    "apparmor": true,
    "ports": {
        "1935/tcp": 1935,
        "8554/tcp": 8554,
        "8888/tcp": 8888
    },
    "ports_description": {
        "1935/tcp": "RTMP streams",
        "8554/tcp": "RTSP streams",
        "8888/tcp": "HLS streams"
    },
    "environment": {
        "HASS": "true"
    },
    "map": [
        "config:rw"
    ],
    "services": [
        "mqtt:want"
    ],
    "options": {
        "WYZE_EMAIL": null,
        "WYZE_PASSWORD": null,
        "NET_MODE": "ANY",
        "SNAPSHOT": "API",
        "MQTT_DTOPIC": "homeassistant"
    },
    "schema": {
        "WYZE_EMAIL": "email",
        "WYZE_PASSWORD": "password",
        "NET_MODE": "list(LAN|P2P|ANY)",
        "SNAPSHOT": "list(API|RTSP|RTSP15|RTSP30|RTSP60|Disable)",
        "MQTT_HOST": "str?",
        "MQTT_AUTH": "str?",
        "MQTT_TOPIC": "str?",
        "MQTT_DTOPIC": "str?",
        "FILTER_NAMES": "str?",
        "FILTER_MODELS": "str?",
        "FILTER_MACS": "str?",
        "FILTER_BLOCK": "bool?",
        "ROTATE_DOOR": "bool?",
        "IGNORE_OFFLINE": "bool?",
        "FRESH_DATA": "bool?",
        "URI_SEPARATOR": "list(-|_|#)?",
        "QUALITY": "str?",
        "FFMPEG_FLAGS": "str?",
        "FFMPEG_CMD": "str?",
        "DEBUG_FRAMES": "bool?",
        "DEBUG_FFMPEG": "bool?",
        "RTSP_RTSPDISABLE": "list(yes|no)?",
        "RTSP_RTMPDISABLE": "list(yes|no)?",
        "RTSP_HLSDISABLE": "list(yes|no)?",
        "DOOR_SIZE": "int?",
        "IGNORE_RES": "int?"
    }
}